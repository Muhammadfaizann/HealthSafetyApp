                        <Image Grid.Column="2"  Source="tool_calendar_icon.png" ></Image>
                    </Grid>
                </StackLayout>
            </Grid>
            <Grid Grid.Row="1">
                <StackLayout>
                    <Label Text="Name of COSHH assessor:" FontSize="Medium"  TextColor="#0086b7" />
                    <!--<StackLayout x:Name="stack1" VerticalOptions="Fill" HorizontalOptions="StartAndExpand" >-->
                    <Editor  x:Name="txt_name" Text="" VerticalOptions="FillAndExpand" Keyboard="Chat"/>
                    <!--</StackLayout>-->
                    <!--<Entry x:Name="txt_name" Placeholder="Name" PlaceholderColor="#939393"/>-->

                    <Label Text="Department:" FontSize="Medium"  TextColor="#0086b7"/>
                    <Entry x:Name="txt_projname" Placeholder="" PlaceholderColor="#939393"/>


                    <Label Text="Location:" FontSize="Medium"  TextColor="#0086b7"/>
                    <Entry x:Name="txt_Check1_text" Placeholder="" PlaceholderColor="#939393"/>


                    <Label Text="Task description:" FontSize="Medium"  TextColor="#0086b7"/>
                    <Entry x:Name="txt_GroundMaintenance" Placeholder="-" PlaceholderColor="#939393"/>


                    <Label Text="Review date:" FontSize="Medium"  TextColor="#0086b7"/>
                    <DatePicker TextColor="Black" x:Name="txt_Check2_text" />
                    <!--<Entry x:Name="txt_Check2_text" Placeholder="" PlaceholderColor="#939393"/>-->

                    <StackLayout BackgroundColor="Gray" HorizontalOptions="Fill" Orientation="Horizontal">
                        <Label Text="1." BackgroundColor="LightBlue" HorizontalOptions="Start" FontSize="Medium" VerticalOptions="CenterAndExpand"/>
                        <Label TextColor="White" FontSize="Medium" Text="Elimination" HorizontalOptions="FillAndExpand" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" BackgroundColor="WhiteSmoke">
                        <Label Text="Is it possible to avoid the need to use hazardous substances?"/>
                        <!--<chkbx:CheckBox DefaultText="Yes" x:Name="option1_yes" TextColor="Green"/>-->
                        <chkbx:CheckText DefaultText="Yes" x:Name="option1_yes" Color="Green" TextColor="Green"  Visual="Material" CheckedChanged="option1_yes_CheckedChanged"/>
                        <chkbx:CheckText x:Name="option1_No" DefaultText="No" TextColor="Red" Color="Red" Visual="Material" CheckedChanged="option1_No_CheckedChanged"/>
                        
                    </StackLayout>

                    <StackLayout BackgroundColor="Gray" HorizontalOptions="Fill" Orientation="Horizontal">
                        <Label Text="2." BackgroundColor="LightBlue" HorizontalOptions="Start" FontSize="Medium" VerticalOptions="CenterAndExpand"/>
                        <Label TextColor="White" FontSize="Medium" Text="Activity details" HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                    <StackLayout>
                        <Label FontSize="Small" Text="Before beginning work on the COSHH assessment process ensure you have a copy of the latest manufacturers safety data sheet (MSDS) for the substance. MSDS's are available from suppliers and manufacturers of products"  TextColor="DeepSkyBlue"/>
                        <Label FontSize="Medium" Text="Describe the activity or work process."/>
                        <Label FontSize="Small" FontAttributes="Italic" Text="Note: Include how long the task will take, how often it will be repeated and how much of the substance is used" />

                        <Label Text="Activity:"/>
                        <Entry x:Name="Activity_txt"  />


                        <Label Text="How long activity will take?"/>
                        <Entry x:Name="HowLong_txt"/>

                        <Label Text="How often activity will be repeated?"/>
                        <Entry x:Name="Howoften_txt"/>

                        <Label Text="How much substance will be used?"/>
                        <Entry x:Name="HowMuch_txt"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Location of work:" />
                        <Entry x:Name="txt_sitename" PlaceholderColor="#939393" FontSize="Small"/>
                        <Label Text="Persons at Risk:" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" >
                        <chkbx:CheckText x:Name="chkbx1" DefaultText="Employees" Visual="Material" Color="Red"/>
                        <chkbx:CheckText x:Name="chkbx2" DefaultText="Students" Visual="Material" Color="Red"/>
                        <chkbx:CheckText x:Name="Others_CB" DefaultText="Others" Visual="Material" Color="Red"/>
                        <chkbx:CheckText x:Name="Valnerable_CB" DefaultText="Vulnerable Persons" Visual="Material" Color="Red"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Name of the substance and supplier:" />
                        <Entry x:Name="txt_substance"  PlaceholderColor="#939393"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Substance application:" />
                        <Entry x:Name="txt_substance_app"  PlaceholderColor="#939393"/>
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Safety data sheet details:" />
                        <Entry x:Name="txt_safety_DS"  PlaceholderColor="#939393"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Management emergency contact numbers:" />
                        <Entry x:Name="txt_Emergency_contact"  PlaceholderColor="#939393" Keyboard="Telephone"/>
                    </StackLayout>
                    
                   
                    
                    <StackLayout BackgroundColor="DarkGray">
                        <Label Text="Classification of the substanse" HorizontalOptions="Center" TextColor="White" FontSize="Large" />
                    </StackLayout>

                    <StackLayout BackgroundColor="LightGray" >
                        <Label Text="Tick the appropriate sign" HorizontalOptions="Center" TextColor="Black" FontSize="Medium" />
                    </StackLayout>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".33*"/>
                                <ColumnDefinition Width=".33*"/>
                                <ColumnDefinition Width=".33*"/>
                            </Grid.ColumnDefinitions>

                            <StackLayout  BackgroundColor="LightGray">
                                <Image Grid.Column="0" Source="AcuteToxicity.png" 
