                                       VerticalOptions="Start"
                                       Margin="0,0,0,0"
                                       HorizontalOptions="Center"/>

                                <chkbx:CheckText  x:Name="cb212" Checked="False" DefaultText="Serious eye irritation" Visual="Material" Color="Red"/>
                            </StackLayout>



                            <StackLayout Grid.Column="2" BackgroundColor="LightGray" >
                                <Image  Source="HighlyFlammable.png" 
