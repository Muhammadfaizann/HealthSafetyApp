                                       VerticalOptions="Start"
                                       Margin="0,0,0,0"
                                       HorizontalOptions="Center"/>

                                <chkbx:CheckText x:Name="cb211" Checked="False" DefaultText="Acute Toxicity" Visual="Material" Color="Red"/>
                            </StackLayout>

                            <StackLayout Grid.Column="1" BackgroundColor="WhiteSmoke" >
                                <Image  Source="SeriousEyeIrritation.png" 
