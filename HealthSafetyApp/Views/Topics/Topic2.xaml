                                       VerticalOptions="Start"
                                       Margin="0,0,0,0"
                                       HorizontalOptions="Center"/>

                                <chkbx:CheckText x:Name="chk313" Checked="False" DefaultText="Respirator" Visual="Material" Color="Red"/>
                            </StackLayout>
                        </Grid>
                        <Grid Grid.Row="1">
