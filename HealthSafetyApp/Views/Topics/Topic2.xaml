                                <chkbx:CheckText x:Name="chk331" Checked="False" DefaultText="Footwear" Visual="Material" Color="Red"/>
                            </StackLayout>


                            <StackLayout Grid.Column="1"  BackgroundColor="WhiteSmoke" >
                                <Image  Source="Other.png" 
                                       Scale=".5"
                                       VerticalOptions="Start"
                                       Margin="0,0,0,0"
                                       HorizontalOptions="Center"/>

                                <chkbx:CheckText x:Name="chk332" Checked="False" DefaultText="Other" Visual="Material" Color="Red"/>
                            </StackLayout>
                        </Grid>
                    </Grid>

                    <StackLayout>
                        <Label Text="First aid measures and requirements:" FontSize="Medium"  TextColor="#0086b7" />
