                            <chkbx:CustomCheckbox x:Name="Y24" Grid.Column="1" Color="Green" HorizontalOptions="Center" Checked="CC_Checked"/>
                            <chkbx:CustomCheckbox x:Name="N24" Grid.Column="2" Color="Red" IsChecked="False" HorizontalOptions="Center" Checked="CC_Checked"/>
                        </Grid>

                       
                    </Grid>
                    
                    <!--2.5-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>




                        <Grid Grid.Row="0" BackgroundColor="LightBlue">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Label  Grid.Column="0" Text="2.5 Footrest" FontAttributes="Bold" HorizontalOptions="Start"/>
