                            <chkbx:CustomCheckbox x:Name="Y41"  Grid.Column="1" Color="Green" HorizontalOptions="Center" Checked="CC_Checked"/>
                            <chkbx:CustomCheckbox x:Name="N41" Grid.Column="2" Color="Red" IsChecked="False" HorizontalOptions="Center" Checked="CC_Checked"/>
                        </Grid>
                    </Grid>

                    <!--2.2-->
                    <Grid>
