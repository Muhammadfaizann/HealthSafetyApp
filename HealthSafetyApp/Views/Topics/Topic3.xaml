                            <chkbx:CustomCheckbox BackgroundColor="AntiqueWhite" x:Name=" N11" Grid.Column="2" Color="Red" IsChecked="False"  HorizontalOptions="Center" Checked="CC_Checked"/>
                        </Grid>

