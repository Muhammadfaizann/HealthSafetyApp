                            <chkbx:CustomCheckbox x:Name="N31" Grid.Column="2" Color="Red" IsChecked="False" HorizontalOptions="Center" Checked="CC_Checked"/>
                        </Grid>

                        <Grid Grid.Row="4">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

