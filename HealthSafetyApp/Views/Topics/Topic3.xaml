                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Label  Grid.Column="0"   Text="If you cannot place your feet flat on the floor whilst keying, has a footrest been supplied?" HorizontalOptions="Start"/>
