                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>




                        <Grid Grid.Row="0" BackgroundColor="LightBlue">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Label  Grid.Column="0" Text="2.3 Chair" FontAttributes="Bold" HorizontalOptions="Start"/>
                            <Label  Grid.Column="1"  TextColor="Green" Text="Yes" HorizontalOptions="Center" />
                            <Label  Grid.Column="2" TextColor="Red" Text="No" HorizontalOptions="Center" />

